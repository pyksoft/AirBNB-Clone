<div class="ui segment">
    <h3>Mailbox</h3>
    <div class="ui list">
        <div class="item">
        <% @conversations.each do |conversation| %>
            <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
                <% if conversation.sender_id == current_user.id %>
                    <% recipient = User.find(conversation.recipient_id) %>
                <% else %>
                    <% recipient = User.find(conversation.sender_id) %>
                <% end %>
                <% listing = Listing.find(conversation.listing_id) %>
                <%= link_to "#{listing.title} conversation with #{recipient.email}", listing_conversation_messages_path(conversation.listing_id, conversation), class: 'btn btn-danger' %><br><br>
            <% end %>
        <% end %>
        </div>
    </div>
</div>

<%= link_to "Back", listings_path, class: 'btn btn-danger' %>

