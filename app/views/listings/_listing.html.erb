<div class="p-2">
    <div class="card" style="width: 20rem;">
        <h3 class="card-header text-center"><%= listing.title %></h3>
        <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{listing.latitude},#{listing.longitude}&markers=#{listing.latitude},#{listing.longitude}&zoom=7&size=640x400&key=AIzaSyANplAQLg6vAm2SsrwHGpZyfQe1zNS1dQs", class: "card-img-top" %>
        <div class="card-block card-body">
            <p class="card-text">
                <em><%= listing.full_address %></em><br>
                <strong>Night fee:</strong> <%= format_money(listing.night_fee_cents) %><br>
                <strong>Cleaning fee:</strong> <%= format_money(listing.cleaning_fee_cents) %><br>
                <strong>Bed count:</strong> <%= listing.bed_count %><br>
                <strong>Bedroom count:</strong> <%= listing.bedroom_count %><br>
                <strong>Bathroom count:</strong> <%= listing.bathroom_count %><br>
                <strong>Description:</strong> <%= listing.description %><br>
            </p>
            <details>
                <summary>Photo</summary>
                <%= image_tag(listing.photo.url, class: "card-img-top") unless listing.photo.nil? %>
            </details>
        </div>
        <%= link_to 'Show', listing_path(listing), class:"btn btn-danger" %>
    </div>
    <br>
</div>