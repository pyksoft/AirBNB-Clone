<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
<%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger') %>
<% else %>
<%= link_to('Login', new_user_session_path, class: 'btn btn-danger') %>
<% end %>
<h2>All Listings</h2>
<div class="d-flex flex-wrap">
  <%= render @listings %>
</div>

<h2>All Listings in Australia</h2>
<div class="d-flex flex-wrap">
  <%= render @listings_australia %>
</div>

<h2>All Listings in New Zealand</h2>
<div class="d-flex flex-wrap">    
  <%= render @listings_new_zealand %>
</div>

<h2>All Listings in Philippines</h2>
<div class="d-flex flex-wrap">        
  <%= render @listings_philippines %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Street address</th>
      <th>City</th>
      <th>Country code</th>
      <th>Bed count</th>
      <th>Bedroom count</th>
      <th>Bathroom count</th>
      <th>Description</th>
      <th>Night fee cents</th>
      <th>Cleaning fee cents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.street_address %></td>
        <td><%= listing.city %></td>
        <td><%= listing.country_code %></td>
        <td><%= listing.bed_count %></td>
        <td><%= listing.bedroom_count %></td>
        <td><%= listing.bathroom_count %></td>
        <td><%= listing.description %></td>
        <td><%= listing.night_fee_cents %></td>
        <td><%= listing.cleaning_fee_cents %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
